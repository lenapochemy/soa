<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             version="3.0">
    <persistence-unit name="HumanPU" transaction-type="JTA">
        <jta-data-source>java:/jdbc/myDataSource</jta-data-source>
        <class>ejb.model.HumanBeing</class>
        <class>ejb.model.Coordinates</class>
        <class>ejb.model.Car</class>
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>
        </properties>
    </persistence-unit>
</persistence>